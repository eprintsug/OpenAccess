<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">

  <flow>
 		<epc:if test="$STAFF_ONLY = 'TRUE'">
 			<stage ref="open_access"/>
 		</epc:if>
  </flow>

  	<stage name="open_access">
    		<component type="Field::Multi" collapse="no">
     	 		<title>Costs</title>
				<field ref="oa_est_cost"/>
				<field ref="oa_charge"/>
				<field ref="oa_vat"/>
				<field ref="oa_paid_date"/>
				<field ref="oa_period"/>
				<field ref="oa_transaction_number"/>
				<field ref="oa_finance_project"/>
				<field ref="oa_pre_payment"/>
				<field ref="oa_apc_fund"/>
    		</component>
		<component><field ref="oa_type" required="yes"/></component>
		<component><field ref="oa_article_ref"/></component>
		<component><field ref="oa_date_of_comp_deposit"/></component>
		<component><field ref="oa_funder_ack"/></component>
		<component><field ref="oa_research_materials_ack"/></component>
		<component><field ref="oa_notes"/></component>
 	</stage>
 	
</workflow>
